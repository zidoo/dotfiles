" Inspired by https://github.com/amix/vimrc

syntax enable
set autoindent
set tabstop=4
set ai			" Auto ident
set si			" Smart ident
set wrap


" Appearance
set number
set showcmd		" command line in bottom bar
set cursorline	" underline for cursor
set wildmenu	" autocomplete for cmd menu
set showmatch	" highlight brackets
set ruler

" Search
set incsearch
set hlsearch

" Turnoff errors
set noerrorbells
set novisualbell

" Backups
set nobackup
set nowb
set noswapfile
